{
  "name": "exif2css",
  "version": "1.0.0",
  "description": "Convert EXIF orientation to CSS transform",
  "main": "src/index.js",
  "files": [
    "src/"
  ],
  "scripts": {
    "test": "ZOROASTER_TIMEOUT=10000 zoroaster test/spec",
    "build": "npm run build-normal && npm run build-min",
    "build-normal": "browserify src/index.js -o dist/exif2css.js --standalone exif2css",
    "build-min": "browserify src/index.js --standalone exif2css --transform uglifyify --debug | exorcist dist/exif2css.js.map > dist/exif2css.js.min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sobesednik/exif2css.git"
  },
  "keywords": [
    "exif",
    "css",
    "orientation"
  ],
  "author": "Anton <anton@sobesednik.media>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sobesednik/exif2css/issues"
  },
  "homepage": "https://github.com/Sobesednik/exif2css#readme",
  "devDependencies": {
    "browserify": "^13.3.0",
    "exorcist": "^0.4.0",
    "node-resemble-js": "^0.2.0",
    "phantomjs-prebuilt": "^2.1.14",
    "selenium-webdriver": "^3.0.1",
    "uglifyify": "^3.0.4",
    "zoroaster": "^0.2.0"
  }
}
